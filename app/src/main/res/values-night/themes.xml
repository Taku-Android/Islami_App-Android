<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item>

        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryVariant">@color/dark</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>


    <style name="appBarText" parent="Theme.IslamiApp">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomNavigationView" parent="Theme.IslamiApp">
        <item name="android:background">@color/navy</item>
    </style>

    <style name="splashImage" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/dark_splash</item>

    </style>


    <style name="homeBackground" parent="Theme.IslamiApp">
        <item name="android:background">@drawable/dark_bg</item>

    </style>


    <style name="sebha_head" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/sebha_head_dark</item>

    </style>

    <style name="sebha_body" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/sebha_body_dark</item>

    </style>


    <style name="CardViewsebha" parent="Theme.IslamiApp">
        <item name="android:background">@color/navy</item>

    </style>
</resources>