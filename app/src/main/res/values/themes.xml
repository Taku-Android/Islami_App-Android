<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IslamiApp" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryVariant">@color/brownV</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="text_color">@color/black</item>
        <item name="itemIconTint">@color/nav_color</item>


    </style>



    <style name="appBarText" parent="Theme.IslamiApp">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BottomNavigationView" parent="Theme.IslamiApp">
        <item name="android:background">@color/brown</item>


    </style>

    <style name="splashImage" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/ligh_splash</item>

    </style>

    <style name="homeBackground" parent="Theme.IslamiApp">
        <item name="android:background">@drawable/light_bg</item>

    </style>

    <style name="CardViewColor" parent="Theme.IslamiApp">
        <item name="android:background">@color/white</item>

    </style>


    <style name="sebha_head" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/head_sebha_light</item>

    </style>

    <style name="sebha_body" parent="Theme.IslamiApp">
        <item name="android:src">@drawable/sebha_body_light</item>

    </style>


</resources>